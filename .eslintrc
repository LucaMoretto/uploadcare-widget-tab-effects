{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "uploadcare",
  "rules": {
    "id-length": [
      "error",
      {
        "exceptions": [
          "_",
          "$",
          "i",
          "e",
          "x",
          "y",
          "t",
          "c",
          "l"
        ]
      }
    ],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "max-nested-callbacks": ["error", 3],
    "max-params": ["error", 5],
    "max-statements": ["error", 40],
    "new-cap": ["error", { "capIsNewExceptions": ["Generate", "Deferred"] }],
    "no-bitwise": ["error", { "allow": ["~"] }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-var": "error",
    "no-underscore-dangle": "off",
    "require-jsdoc": "off",
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
