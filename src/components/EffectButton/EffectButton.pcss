.effect-button {
  flex: 0 1 auto;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  height: 45px;

  color: #212121;
  fill: #212121;

  &:hover, &:focus {
    color: #666;
    fill: #666;
  }

  &:active {
    color: #000;
    fill: #000;
  }

  &[aria-disabled=true] {
    color: #d4d2d2 !important;
    fill: #d4d2d2 !important;

    cursor: not-allowed;
  }
}

.effect-button_applied {
  position: relative;

  &:before {
    content: '';
    display: block;

    position: absolute;
    top: calc(100% + 3px);
    left: 50%;

    width: 6px;
    height: 6px;

    background: #3787ec;
    border-radius: 50%;

    transform: translateX(-50%);
  }
}
